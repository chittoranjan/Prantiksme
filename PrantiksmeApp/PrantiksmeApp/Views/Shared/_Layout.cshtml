@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>

    <title>PRANTIKSME</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <link rel="icon" type="image/ico" href="~/images/favicon.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />

    <!--Layout style start-->
    <link rel="stylesheet" href="~/assets/css/main.css" />

    <!--Layout style end-->

    @Styles.Render("~/project/css")
    @RenderSection("styles", required: false)
</head>

<body class="single is-preload">

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Header -->
        <header id="header">
            <img src="~/images/mylogo.jpg" alt="Prantiksme logo" width="60px" height="auto">

            <h1><a href="@Url.Action("Index","Home")">Prantik sme</a></h1>
            <nav class="links">
                <ul id="navmenu">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a href="@Url.Action("About","Home")">About</a></li>
                    <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                    <li>
                        <a href="#">Setting</a><span class="darrow">&#9660;</span>
                        <ul class="sub1">
                            <li>
                                <a href="#">Registration</a><span class="rarrow">&#9654;</span>
                                <ul class="sub2">
                                    <li><a href="@Url.Action("Register","Account")">Register</a></li>
                                    <li><a href="@Url.Action("ForgotPassword","Account")">Forgot Password</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">Proprietor</a><span class="rarrow">&#9654;</span>
                                <ul class="sub2">
                                    <li><a href="@Url.Action("Create", "Proprietors")">Create</a></li>
                                    <li><a href="@Url.Action("Index", "Proprietors")">Search</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">Sales Store</a><span class="rarrow">&#9654;</span>
                                <ul class="sub2">
                                    <li><a href="@Url.Action("Create", "SalesStores")">Create</a></li>
                                    <li><a href="@Url.Action("Index", "SalesStores")">Search</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">Product</a><span class="rarrow">&#9654;</span>
                                <ul class="sub2">
                                    <li><a href="@Url.Action("Create", "SalesStores")">Create</a></li>
                                    <li><a href="@Url.Action("Index", "SalesStores")">Search</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("Index","Home")">Sales</a></li>
                </ul>
            </nav>
            <nav class="main">
                <ul>
                    @*@if (Request.IsAuthenticated)
                        {
                            <li class="menu">
                                <span style="color: darkgreen; text-transform: uppercase; font-weight: bold; font-size: 7pt;"> @User.Identity.GetUserName() </span>
                            </li>

                        }*@

                    <li class="search">
                        <a class="fa-search" href="#search">Search</a>
                        <form id="search" method="get" action="#">
                            <input type="text" name="query" placeholder="Search" />
                        </form>
                    </li>
                    <li class="menu">
                        <a class="fa-bars" href="#menu">Menu</a>
                    </li>
                </ul>
            </nav>
        </header>

        <!-- Menu -->
        <section id="menu">

            <!-- Search -->
            <section>
                <form class="search" method="get" action="#">
                    <input type="text" name="query" placeholder="Search" />
                </form>
            </section>

            <!-- Links -->
            <section class="mediamenu">
                <ul class="links">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a href="@Url.Action("About","Home")">About</a></li>
                    <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                    <li class="mediasub1">
                        <a href="#">Register</a>
                        <ul class="mediamenuitem">
                            <li><a href="@Url.Action("Register","Account")">Register</a></li>
                            <li><a href="@Url.Action("ForgotPassword","Account")">Forgot Password</a></li>
                        </ul>
                    </li>
                    <li class="mediasub1">
                        <a href="#">Proprietor</a>
                        <ul class="mediamenuitem">
                            <li><a href="@Url.Action("Create","Proprietors")">Create</a></li>
                            <li><a href="@Url.Action("Index","Proprietors")">Search</a></li>
                        </ul>
                    </li>
                    <li class="mediasub1">
                        <a href="#">Sales Store</a>
                        <ul class="mediamenuitem">
                            <li><a href="@Url.Action("Create","SalesStores")">Create</a></li>
                            <li><a href="@Url.Action("Index","SalesStores")">Search</a></li>
                        </ul>
                    </li>


                </ul>
            </section>

            <!-- Actions -->
            <section class="mediasubbtn">
                @*<ul class="actions stacked">
                        <li><a href="#" class="button large fit">Log In</a></li>
                    </ul>*@
                @Html.Partial("_LoginPartial")
            </section>

        </section>

        <!-- Main -->
        <div id="main">
            <div class="post" style="min-height: 100vh;">
                @RenderBody()
            </div>

        </div>


        <!-- Footer -->
        <section id="footer">
            <ul class="icons">
                <li><a href="#" class="fa-twitter" title="Twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="fa-facebook" title="Facebook"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="fa-instagram" title="Instagram"><span class="label">Instagram</span></a></li>
                <li><a href="#" class="fa-rss" title="RSS"><span class="label">RSS</span></a></li>
                <li><a href="#" class="fa-envelope" title="Email"><span class="label">Email</span></a></li>
            </ul>
            <p class="copyright">&copy; Copyright - 2019. All Rights Reserved: <a href="@Url.Action("Index","Home")">Prantiksme</a>.</p>
        </section>

    </div>

    <!-- Scripts -->
    @*<script src="~/Scripts/jquery-3.3.1.min.js"></script>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/bootstrap2-toggle.min.js"></script>


    <!--Layout script start-->
    @*<script src="~/assets/js/jquery.min.js"></script>*@
    <script src="~/assets/js/browser.min.js"></script>
    <script src="~/assets/js/breakpoints.min.js"></script>
    <script src="~/assets/js/util.js"></script>
    <script src="~/assets/js/main.js"></script>
    <!--Layout script end-->
    <script>
        $(document).ready(function () {
            $('.dropdown-submenu a.test').on("click", function (e) {
                $(this).next('ul').toggle();
                e.stopPropagation();
                e.preventDefault();
            });
        });
    </script>
    @Scripts.Render("~/project/js")

    @RenderSection("scripts", required: false)


</body>

</html>

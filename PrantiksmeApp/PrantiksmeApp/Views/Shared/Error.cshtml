@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}
<div class="post postdiv">
    <header class="headerdiv">
        <div class="title titlediv">
            <h2><span><a><i class="glyphicon glyphicon-hand-right"></i></a>&nbsp;</span><a href="#">Error!</a></h2>

        </div>
        <div class="meta metadiv">
            <div class="row metarow">
                <a href="#" title="User" data-toggle=""><i class="fa fa-user"></i></a>
                <a href="#" title="Search" data-toggle=""><i class="fa fa-search"></i></a>
                <a href="#" title="Setting" data-toggle=""><i class="fa fa-gear"></i></a>
                <a href="#divCollapse" title="Collapse" data-toggle="collapse"><i class="fa fa-angle-double-down"></i></a>
            </div>
        </div>
    </header>

    <div id="divCollapse" class="collapse in text-justify maindiv ">
        <h1 class="text-danger">Error.</h1>
        <h2 class="text-danger">An error occurred while processing your request.</h2>
        @if (@ViewBag.ErrorMsg != null)
        {
            <br />
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">Show Error</button>

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Error Message :</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>

                        </div>
                        <div class="modal-body">
                            <p class="text-danger" style="white-space: pre-line">@ViewBag.ErrorMsg</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>

</div>


